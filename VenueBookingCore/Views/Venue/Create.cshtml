@model VenueBookingCore.Models.Venue
<h2>Create </h2>
<form asp-action="Create" asp-Controller="Venue" method="post">
    <div class="form-group">
        <label asp-for="EventName"class="form-control" col-sm-2">Enter  Event Name</label>
        <input asp-for="EventName" class="form-control" col-sm-10/>
    </div>
    <div class="form-group">
        <label asp-for="VenueName" class="form-control" col-sm-2">Enter  Venue Name</label>
        <input asp-for="VenueName" class="form-control" col-sm-10 />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="form-control" col-sm-2">Enter  amount</label>
        <input asp-for="Price" class="form-control" col-sm-10 />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="form-control col-sm-2">Enter Address</label>
        <input asp-for="Address" class="form-control" col-sm-10/>
    </div>
    <div>
        <button type="submit" class="btb btn-success" >Create</button>
    </div>
</form>